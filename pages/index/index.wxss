.list-item .item-index {
  width: 100rpx;
  font-size: 32rpx;
  text-align: center;
  font-style:oblique;
  font-weight:bold;
}
.list-item .item-desc {
  width: 450rpx;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list-item .item-n {
  width: 200rpx;
  font-size: 32rpx;
  text-align: center;
}

.bottom-tip {
  display: block;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999;
}


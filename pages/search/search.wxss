/* pages/search/search.wxss */
page {
  background-color: #f8f8f8;
}

.wrapper {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 60rpx;
}

/* 搜索框 */
.input-wrapper {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  margin: 60rpx 0 30rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow:0 2rpx 6rpx 0 rgba(0,0,0,0.1);
}
.input-wrapper input {
  width: 100%;
  height: 60rpx;
  font-size: 36rpx;
  padding-left: 20rpx;
}

/* 已选项 */
.chosed-wrapper {
  padding: 30rpx 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow:0 2rpx 6rpx 0 rgba(0,0,0,0.1);
}
.chosed-content {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}
.chosed-item {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  /* max-width: calc(50% - 12rpx); */
  padding: 10rpx;
  margin:0 10rpx 10rpx 0;
  background-color:#d5d5d5;
  color:#fff;
  border-radius:20px;
}
.chosed-item text {
  font-size: 28rpx;
  margin-right:10rpx;
  /* overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; */
  pointer-events: none;
}
.chosed-item icon {
  color: #9e9e9e;
  pointer-events: none;
}
.button-wrapper {
  margin: 40rpx 0 20rpx;
  text-align: center;
}
.button-wrapper button {
  width: 80%;
  height:80rpx;
  line-height:80rpx;
}

/* 搜索结果 */
.result-wrapper {
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  box-shadow:0 2rpx 6rpx 0 rgba(0,0,0,0.1);
  background-color: #fff;
  opacity: 1;
  max-height: 100%;
  transition: all 0.3s;
}
.search-result {
  margin-bottom: 30rpx;
}
.result-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.result-item:last-of-type {
  border-bottom: 0;
}
.item-text {
  flex-grow: 1;
  padding: 30rpx 30rpx;
  font-size: 32rpx;
}
.item-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 80rpx;
  color: #9e9e9e;
}

.hide {
  opacity: 0;
  max-height: 0;
  visibility: hidden;
  color: #eee;
  margin: 0 !important;
}


/* 推荐  */
.recommend-wrapper {
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}
.recommend-wrapper .item-text {
  padding-left: 0;
}
.recommmend-title {
  padding: 30rpx 0 20rpx 0;
  color: #9e9e9e;
  font-size: 30rpx;
  border-bottom: 1px solid #eee;
}
